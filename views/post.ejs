<%- include('./partials/header.ejs') %>

    <% if (locals.post) %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md6">
                    <h1 class="text-center">
                        <%= post.title %>
                    </h1>

                    <h6 class="m-0 text-center"> By <%= post.name %>
                    </h6>
                    <br>
                </div>
                <div class="col-md6">
                    <p class="text-center">
                        <%= post.content %>
                    </p>
                </div>
            </div>
        </div>
        <%- include('./partials/footer.ejs') %>